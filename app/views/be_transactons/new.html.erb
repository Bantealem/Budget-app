<p class="text-center fs-2 fw-bold">Categories Registration</p>

<%= form_with url: be_transactions_path, model: @be_transaction, method: :post, class: 'p-2 m-4' do |f|%>
  <%if @category.errors.any?%>

    <div class='alert alert-danger'>
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>

    <% @be_transaction.errors.full_messages.each do |msg|%>
      <p><%=msg%></p>
     <%end%>
    </div>
  <%end%>
  <div class="mb-2 g-2">
  <%= f.label :be_transaction, "Transaction Name ", class: "col-sm-2 col-form-label form-label fs-4 fw-bold" %>
    <div class="col-sm-10">
    <%= f.text_field :name, required:true, class: "form-control form-control-lg form-control-sm", placeholder: 'Eg. Alzormi '%>
    </div>
  </div>

    <div class="mb-2 g-2">
  <%= f.label :be_transaction, "Transaction Amount ", class: "col-sm-2 col-form-label form-label fs-4 fw-bold" %>
    <div class="col-sm-10">
    <%= f.text_field :amount, required:true, class: "form-control form-control-lg form-control-sm", placeholder: 'Eg. Alzormi '%>
    </div>
  </div>

  <%= f.submit class: 'btn btn-primary'%>
<%end%>